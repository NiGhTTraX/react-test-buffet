{
  "presets": [
    ["env", {
      "targets": {
        "browsers": ["last 2 versions"],
        "node": "current"
      }
    }],
    "react"
  ],

  "plugins": [
    "transform-class-properties",
    "transform-object-rest-spread"
  ],

  "env": {
    "development": {
      "plugins": [
        "react-hot-loader/babel"
      ]
    },
    "tests": {
      "plugins": [
        "./tests/unit/babel-plugin-remove-asset-imports"
      ]
    },
    "coverage": {
      "plugins": [
        "./tests/unit/babel-plugin-remove-asset-imports",
        "istanbul"
      ]
    }
  }
}
