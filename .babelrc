{
  "presets": [
    ["env", {
      "targets": {
        "browsers": ["last 2 versions"]
      }
    }],
    "react"
  ],

  "plugins": [
    "transform-class-properties",
    "transform-object-rest-spread"
  ],

  "env": {
    "development": {
      "presets": ["react-hmre"]
    },

    "tests": {
      "plugins": [
        ["istanbul", {
          "exclude": [
            "tests/unit/**/*.js"
          ]
        }]
      ]
    }
  }
}
