{
  "name": "react-test-buffet",
  "version": "2.1.0",
  "description": "Complete example of testing React components with Mocha, Chai and Sinon, running the tests in real browsers using Karma and Browserify and generating code coverage with Istanbul",
  "repository": {
    "type": "git",
    "url": "git@github.com:NiGhTTraX/react-test-buffet.git"
  },
  "author": "Andrei Picus",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/NiGhTTraX/react-test-buffet/issues"
  },
  "devDependencies": {
    "babel-core": "^6.11.4",
    "babel-istanbul-loader": "^0.1.0",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "babel-register": "^6.11.6",
    "chai": "^3.5.0",
    "isparta-loader": "^2.0.0",
    "jquery": "^3.1.0",
    "jsdom": "^9.4.1",
    "karma": "^1.1.2",
    "karma-chrome-launcher": "^1.0.1",
    "karma-coverage": "^1.1.1",
    "karma-firefox-launcher": "^1.0.0",
    "karma-junit-reporter": "^1.1.0",
    "karma-mocha": "^1.1.1",
    "karma-mocha-reporter": "^2.0.5",
    "karma-phantomjs-launcher": "^1.0.1",
    "karma-sourcemap-loader": "^0.3.7",
    "lodash": "^4.14.0",
    "mocha": "^2.5.3",
    "phantomjs-prebuilt": "^2.1.8",
    "react-component-tree": "^0.2.4",
    "sinon": "github:ubervu/Sinon.JS",
    "sinon-chai": "^2.6.0",
    "source-map-support": "^0.4.2",
    "webpack": "^1.13.1"
  },
  "dependencies": {
    "react": "^0.13.3"
  },
  "scripts": {
    "test": "mocha --compilers js:babel-register --recursive tests/setup-node.js tests/components/",
    "test:browser": "npm run test:browser:build && karma start tests/conf/karma/base.js",
    "test:browser:build": "webpack --config tests/conf/webpack/unit-tests.config.js --bail",
    "test:coverage": "npm run test:coverage:build && karma start tests/conf/karma/coverage.js",
    "test:coverage:build": "webpack --config tests/conf/webpack/unit-tests-coverage.config.js --bail"
  }
}
