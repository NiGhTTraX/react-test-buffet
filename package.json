{
  "name": "react-test-buffet",
  "version": "3.0.0",
  "description": "Complete example of building UI with TDD and React",
  "keywords": [
    "react",
    "tdd",
    "testing",
    "unit",
    "acceptance",
    "mocha",
    "chai",
    "sinon",
    "selenium",
    "webdriverio",
    "coverage",
    "istanbul",
    "nyc",
    "docker"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:NiGhTTraX/react-test-buffet.git"
  },
  "author": "Andrei Picus",
  "license": "MIT",
  "scripts": {
    "test": "npm run test:unit --silent && npm run test:acceptance --silent",
    "test:unit": "NODE_ENV=tests nyc npm run _mocha",
    "test:unit:watch": "npm run _mocha -- --compilers js:babel-register --watch --watch-extensions js,jsx --reporter min",
    "_mocha": "mocha tests/unit/helpers/index.node.js 'tests/unit/**/*.spec.js'",
    "test:unit:debug": "webpack --bail -w --config ./tests/unit/webpack.config.unit.js",
    "test:acceptance": "./tests/acceptance/run.sh",
    "test:acceptance:debug": "./tests/acceptance/debug.sh",
    "_test:acceptance": "mocha --opts tests/acceptance/mocha.opts tests/acceptance/setup.js --recursive tests/acceptance/specs",
    "_test:acceptance:debug": "mocha --opts tests/acceptance/mocha.debug.opts tests/acceptance/setup.js --recursive tests/acceptance/specs",
    "lint": "npm run lint:files -- .",
    "lint:files": "eslint --ext js --ext jsx",
    "postinstall": "./tools/install-git-hooks.sh",
    "start": "./start.sh",
    "_start": "node tests/dev-server.js",
    "stop": "docker-compose down"
  },
  "dependencies": {
    "classnames": "~2.2.5",
    "prop-types": "~15.5.4",
    "react": "~15.6.1",
    "react-dom": "~15.6.1",
    "todomvc-app-css": "~2.1.0"
  },
  "devDependencies": {
    "babel-core": "~6.26.0",
    "babel-eslint": "~8.0.0",
    "babel-loader": "~7.1.0",
    "babel-plugin-istanbul": "~4.1.1",
    "babel-plugin-transform-class-properties": "~6.24.1",
    "babel-plugin-transform-object-rest-spread": "~6.26.0",
    "babel-polyfill": "~6.26.0",
    "babel-preset-env": "~1.6.0",
    "babel-preset-react": "~6.24.1",
    "babel-preset-react-hmre": "~1.1.1",
    "babel-register": "~6.26.0",
    "chai": "~4.1.0",
    "css-loader": "~0.28.0",
    "eslint": "~4.6.0",
    "eslint-config-airbnb": "~15.1.0",
    "eslint-plugin-import": "~2.7.0",
    "eslint-plugin-jsx-a11y": "~5.1.0",
    "eslint-plugin-react": "~7.3.0",
    "express": "~4.14.0",
    "jquery": "~3.2.0",
    "jsdom": "~11.2.0",
    "lodash.isequal": "~4.5.0",
    "lodash.merge": "~4.6.0",
    "mocha": "~3.5.0",
    "mugshot": "~0.3.2",
    "mugshot-looks-same": "~1.0.0",
    "mugshot-webdriverio": "~1.0.0",
    "nyc": "~11.2.1",
    "react-hot-loader": "~3.0.0-beta.6",
    "sinon": "~3.2.0",
    "sinon-chai": "~2.13.0",
    "style-loader": "~0.18.0",
    "webdriverio": "~4.8.0",
    "webpack": "~3.5.1",
    "webpack-dev-middleware": "~1.12.0",
    "webpack-hot-middleware": "~2.19.1"
  }
}
