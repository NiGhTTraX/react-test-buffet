{
  "name": "todomvc-react-tdd",
  "version": "0.0.1",
  "description": "TodoMVC built with React and TDD",
  "repository": {
    "type": "git",
    "url": "https://github.com/NiGhTTraX/todomvc-react-tdd.git"
  },
  "scripts": {
    "test": "npm run test:unit --silent && npm run test:acceptance --silent",
    "test:unit": "NODE_ENV=tests mocha --compilers js:babel-register --reporter min tests/helpers/index.node.js \"tests/unit/**/*.spec.js\"",
    "test:unit:watch": "npm run test:unit -- --watch",
    "test:unit:browser:build": "npm run build:bail -- ./tests/unit/webpack.config.unit.js",
    "test:unit:browser:watch": "npm run build -- ./tests/unit/webpack.config.unit.js -w",
    "test:acceptance": "mocha --compilers js:babel-register --reporter min tests/acceptance/setup.js tests/acceptance/todos.spec.js",
    "test:acceptance:build": "npm run build:bail -- ./tests/acceptance/webpack.config.acceptance.js",
    "test:acceptance:watch": "npm run build -- ./tests/acceptance/webpack.config.acceptance.js -w",
    "build:bail": "webpack --progress --bail --config",
    "build": "webpack --progress --config",
    "lint": "npm run lint:files -- .",
    "lint:files": "eslint --ext js --ext jsx",
    "postinstall": "./tools/install-git-hooks.sh",
    "start": "node tests/dev-server.js"
  },
  "keywords": [
    "todomvc",
    "react",
    "tdd"
  ],
  "author": "Andrei Picus",
  "license": "MIT",
  "dependencies": {
    "classnames": "~2.2.5",
    "react": "~15.3.2",
    "react-dom": "~15.3.2",
    "todomvc-app-css": "~2.0.6"
  },
  "devDependencies": {
    "babel": "~6.5.2",
    "babel-core": "~6.9.0",
    "babel-eslint": "~7.1.1",
    "babel-loader": "~6.2.4",
    "babel-plugin-transform-class-properties": "~6.9.0",
    "babel-plugin-transform-object-rest-spread": "~6.20.2",
    "babel-preset-es2015": "~6.9.0",
    "babel-preset-react": "~6.5.0",
    "babel-preset-react-hmre": "~1.1.1",
    "babel-register": "~6.9.0",
    "chai": "~3.5.0",
    "css-loader": "~0.23.1",
    "eslint": "~3.13.0",
    "eslint-config-airbnb": "~14.0.0",
    "eslint-import-resolver-webpack": "~0.8.0",
    "eslint-plugin-import": "~2.2.0",
    "eslint-plugin-jsx-a11y": "~3.0.2",
    "eslint-plugin-react": "~6.9.0",
    "express": "~4.14.0",
    "jquery": "~2.2.4",
    "jsdom": "~9.2.1",
    "lodash.merge": "~4.4.0",
    "mocha": "~3.2.0",
    "react-addons-test-utils": "~15.3.2",
    "sinon": "https://github.com/uberVU/Sinon.JS.git",
    "sinon-chai": "~2.8.0",
    "skip-amd-webpack-plugin": "0.0.2",
    "style-loader": "~0.13.1",
    "webdriverio": "~4.6.1",
    "webpack": "~1.13.1",
    "webpack-dev-middleware": "~1.9.0",
    "webpack-hot-middleware": "~2.15.0"
  }
}
