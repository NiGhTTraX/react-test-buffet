{
  "name": "react-test-buffet",
  "version": "3.0.0",
  "description": "Complete example of building UI with TDD and React",
  "keywords": [
    "react",
    "tdd",
    "testing",
    "unit",
    "acceptance",
    "mocha",
    "chai",
    "sinon",
    "selenium",
    "webdriverio",
    "coverage",
    "istanbul",
    "nyc",
    "docker"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:NiGhTTraX/react-test-buffet.git"
  },
  "author": "Andrei Picus",
  "license": "MIT",
  "scripts": {
    "test": "./tests/run.sh",
    "test:unit": "NODE_ENV=tests nyc npm run _test:unit",
    "test:unit:watch": "npm run _test:unit -- --opts tests/unit/mocha.watch.opts",
    "_test:unit": "mocha tests/unit/helpers/index.node.js 'tests/unit/**/*.spec.js'",
    "test:unit:debug": "webpack --bail -w --config ./tests/unit/webpack.config.unit.js",
    "test:acceptance": "./tests/acceptance/run.sh",
    "test:acceptance:debug": "./tests/acceptance/debug.sh",
    "_test:acceptance": "mocha --opts tests/acceptance/mocha.opts tests/acceptance/setup.js --recursive tests/acceptance/specs",
    "_test:acceptance:debug": "mocha --opts tests/acceptance/mocha.debug.opts tests/acceptance/setup.js --recursive tests/acceptance/specs",
    "lint": "eslint --ext js --ext jsx .",
    "precommit": "lint-staged",
    "start": "./start.sh",
    "_start": "node tests/dev-server.js",
    "stop": "docker-compose down"
  },
  "lint-staged": {
    "*.{js,jsx}": "eslint"
  },
  "dependencies": {
    "classnames": "~2.2.5",
    "prop-types": "~15.6.0",
    "react": "~16.2.0",
    "react-dom": "~16.2.0",
    "todomvc-app-css": "~2.1.0"
  },
  "devDependencies": {
    "babel-core": "~6.26.0",
    "babel-eslint": "~8.2.1",
    "babel-loader": "~7.1.0",
    "babel-plugin-istanbul": "~4.1.1",
    "babel-plugin-transform-class-properties": "~6.24.1",
    "babel-plugin-transform-object-rest-spread": "~6.26.0",
    "babel-polyfill": "~6.26.0",
    "babel-preset-env": "~1.6.0",
    "babel-preset-react": "~6.24.1",
    "babel-preset-react-hmre": "~1.1.1",
    "babel-register": "~6.26.0",
    "chai": "~4.1.0",
    "css-loader": "~0.28.0",
    "eslint": "~4.15.0",
    "eslint-config-airbnb": "~16.1.0",
    "eslint-plugin-import": "~2.8.0",
    "eslint-plugin-jsx-a11y": "~6.0.2",
    "eslint-plugin-react": "~7.5.1",
    "express": "~4.14.0",
    "husky": "~0.14.3",
    "jquery": "~3.2.0",
    "jsdom": "~11.5.1",
    "lint-staged": "~6.0.0",
    "lodash.isequal": "~4.5.0",
    "lodash.merge": "~4.6.0",
    "mocha": "~4.1.0",
    "mugshot": "~0.3.2",
    "mugshot-looks-same": "~1.0.0",
    "mugshot-webdriverio": "~1.0.0",
    "nyc": "~11.4.1",
    "react-hot-loader": "~3.1.3",
    "sinon": "~4.1.1",
    "sinon-chai": "~2.14.0",
    "style-loader": "~0.19.0",
    "webdriverio": "~4.10.0",
    "webpack": "~3.10.0",
    "webpack-dev-middleware": "~2.0.1",
    "webpack-hot-middleware": "~2.21.0"
  }
}
