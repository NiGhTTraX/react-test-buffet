{
  "name": "react-test-buffet",
  "version": "3.0.0",
  "description": "Complete example of building UI with TDD and React",
  "keywords": [
    "react",
    "tdd",
    "testing",
    "unit",
    "acceptance",
    "mocha",
    "chai",
    "sinon",
    "selenium",
    "webdriverio",
    "coverage",
    "istanbul",
    "nyc",
    "docker"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:NiGhTTraX/react-test-buffet.git"
  },
  "author": "Andrei Picus",
  "license": "MIT",
  "scripts": {
    "test": "npm run test:unit --silent && npm run test:acceptance --silent",
    "test:unit": "NODE_ENV=tests nyc mocha --compilers js:babel-register --reporter min tests/unit/helpers/index.node.js \"tests/unit/**/*.spec.js\"",
    "test:unit:watch": "npm run test:unit -- --watch",
    "test:unit:debug": "NODE_ENV=tests webpack --bail -w --config  ./tests/unit/webpack.config.unit.js",
    "test:acceptance": "./tests/acceptance/run.sh",
    "test:acceptance:debug": "./tests/acceptance/debug.sh",
    "_test:acceptance": "mocha --opts tests/acceptance/mocha.opts tests/acceptance/setup.js --recursive tests/acceptance/specs",
    "_test:acceptance:debug": "mocha --opts tests/acceptance/mocha.debug.opts tests/acceptance/setup.js --recursive tests/acceptance/specs",
    "lint": "npm run lint:files -- .",
    "lint:files": "eslint --ext js --ext jsx",
    "postinstall": "./tools/install-git-hooks.sh",
    "start": "./start.sh",
    "_start": "node tests/dev-server.js",
    "stop": "docker-compose down"
  },
  "dependencies": {
    "classnames": "~2.2.5",
    "react": "~15.4.2",
    "react-dom": "~15.4.2",
    "react-hot-loader": "~3.0.0-beta.6",
    "todomvc-app-css": "~2.1.0"
  },
  "devDependencies": {
    "babel-core": "~6.24.0",
    "babel-eslint": "~7.2.0",
    "babel-loader": "~6.4.0",
    "babel-plugin-istanbul": "~4.0.0",
    "babel-plugin-transform-class-properties": "~6.22.0",
    "babel-plugin-transform-object-rest-spread": "~6.23.0",
    "babel-polyfill": "~6.23.0",
    "babel-preset-env": "~1.2.0",
    "babel-preset-react": "~6.22.0",
    "babel-preset-react-hmre": "~1.1.1",
    "babel-register": "~6.24.0",
    "chai": "~3.5.0",
    "css-loader": "~0.27.0",
    "eslint": "~3.18.0",
    "eslint-config-airbnb": "~14.1.0",
    "eslint-import-resolver-webpack": "~0.8.0",
    "eslint-plugin-import": "~2.2.0",
    "eslint-plugin-jsx-a11y": "~4.0.0",
    "eslint-plugin-react": "~6.10.0",
    "express": "~4.14.0",
    "jquery": "~3.2.0",
    "jsdom": "~9.12.0",
    "lodash.isequal": "~4.5.0",
    "lodash.merge": "~4.6.0",
    "mocha": "~3.2.0",
    "mugshot": "~0.3.2",
    "mugshot-looks-same": "~1.0.0",
    "mugshot-webdriverio": "~1.0.0",
    "nyc": "~10.1.2",
    "react-addons-test-utils": "~15.4.2",
    "sinon": "https://github.com/uberVU/Sinon.JS.git",
    "sinon-chai": "~2.9.0",
    "style-loader": "~0.14.0",
    "webdriverio": "~4.6.1",
    "webpack": "~2.2.1",
    "webpack-dev-middleware": "~1.10.0",
    "webpack-hot-middleware": "~2.17.0"
  }
}
