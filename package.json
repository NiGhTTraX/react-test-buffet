{
  "name": "react-test-buffet",
  "version": "0.4.0",
  "description": "Complete example of testing React components with Mocha, Chai and Sinon, running the tests in real browsers using Karma and Browserify and generating code coverage with Istanbul",
  "repository": {
    "type": "git",
    "url": "git@github.com:NiGhTTraX/react-test-buffet.git"
  },
  "author": "Andrei Picus",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/NiGhTTraX/react-test-buffet/issues"
  },
  "devDependencies": {
    "babel-core": "^6.11.4",
    "babel-istanbul-loader": "^0.1.0",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "chai": "^1.9.2",
    "isparta-loader": "^2.0.0",
    "jquery": "^2.1.1",
    "jsdom": "^3.1.2",
    "karma": "^0.12.24",
    "karma-chrome-launcher": "^0.1.5",
    "karma-coverage": "^0.2.6",
    "karma-firefox-launcher": "^0.1.3",
    "karma-junit-reporter": "^0.2.2",
    "karma-mocha": "^0.1.9",
    "karma-phantomjs-launcher": "^0.1.4",
    "karma-sourcemap-loader": "^0.3.0",
    "lodash": "^2.4.1",
    "mocha": "^1.21.5",
    "react-component-tree": "^0.2.4",
    "sinon": "github:ubervu/Sinon.JS",
    "sinon-chai": "^2.6.0",
    "source-map-support": "^0.2.8",
    "webpack": "^1.13.1"
  },
  "dependencies": {
    "react": "^0.13.3"
  },
  "scripts": {
    "test": "mocha --compilers js:babel/register --recursive tests/setup-node.js tests/components/",
    "test:browser": "npm run test:browser:build && karma start tests/conf/karma/karma.conf.js",
    "test:browser:build": "webpack --config tests/conf/webpack/unit-tests.config.js --bail",
    "test:coverage": "npm run test:coverage:build && karma start tests/conf/karma/karma.conf.coverage.js",
    "test:coverage:build": "webpack --config tests/conf/webpack/unit-tests-coverage.config.js --bail"
  }
}
