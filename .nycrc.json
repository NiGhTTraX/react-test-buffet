{
  "include": [
    "src/**/*.js",
    "src/**/*.jsx"
  ],
  "exclude": [
    "**/webpack.config.*",
    "src/index*",
    "src/app-factory.js",
    "tests/unit/**/*.js",
    "playground"
  ],
  "extension": [".js", ".jsx"],
  "all": true,

  "sourceMap": false,
  "instrument": false,
  "require": [
    "babel-register"
  ],

  "reporter": ["html"],
  "report-dir": "tests/unit/results/coverage",

  "lines": 100,
  "branches": 100,
  "check-coverage": true
}
